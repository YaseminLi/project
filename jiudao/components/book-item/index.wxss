.book-item-container{
  width: 240rpx;
  height: 360rpx;
  background:white;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}
.book-item-container image{
  width: 100%;
  height: 220rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.book-item-container .content{
  margin: 20rpx;
  height: 100rpx;
    display: flex;
  flex-direction: column;
}
.book-item-container .content .title{
  color: black;
  font-weight: 500;
}
.book-item-container .content .author{
  font-weight: 500;
  font-size: 20rpx;
}
.book-item-container .content .comments{
  margin-top: 15rpx;
  display: flex;
  justify-content: flex-end;
}
.book-item-container .content .comments text{
  margin-left: 5rpx;
  font-size: 20rpx;
  text-align: end;
}