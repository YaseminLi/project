.container {
  border-top: 20rpx solid #f1f1f1;
  padding: 20rpx 30rpx;
}

.book-container {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-container image {
  width: 200rpx;
  height: 300rpx;
}

.book-container .book-name {
  margin-top: 20rpx;
  font-size: 38rpx;
  color: black;
  font-weight: 500;
}

.book-container .author {
  font-size: 28rpx;
  font-weight: 500;
}

.container .title {
  font-size: 30rpx;
  color: black;
  font-weight: 400;
  text-align: center;
}

.comments-container .comments {
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.comment-item {
  background: #f1f1f1;
  height: 50rpx;
  margin: 10rpx 0;
  margin-right: 20rpx;
  padding: 0 30rpx;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
}

.comments  view:nth-child(1) {
  background: lightblue;
}

.comments  view:nth-child(2) {
  background: rgb(248, 195, 146);
}

.comment-item .comments-num {
  font-size: 20rpx;
  color: #999;
  margin-left: 15rpx;
}

.content-container .content {
  display: inline-block;
  margin-top: 10rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  text-indent:2em
}


.description .plain {
  display: inline-block;
  width: 80rpx;
  text-align: end;
}
.description .message{
  margin-left: 20rpx;
  color: #333333;
}
.decription-container .bottom-bgk{
  height: 90rpx;
  width: 100%;
  background: white;
}
.tab-bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
}
.write-comment{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 56rpx;
  width: 410rpx;
  margin-left: 30rpx;
  margin-right: 150rpx;
  border:1rpx solid #333333;
  border-radius: 28rpx;
}
.write-comment image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 30rpx;
}
.write-comment input{
  height: 56rpx;
}
.placeholder{
  font-size: 24rpx;
  line-height:24rpx;
  color: #333333;
  margin-left: 10rpx;
}
.button{
  margin-right: 30rpx;
}
.button > image{
  height: 30rpx;
  width: 30rpx;
}