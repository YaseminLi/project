.header {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header .book-name {
  margin-top: 20rpx;
  font-size: 38rpx;
  color: #2f2f2f;
  font-weight: 600;
}

.header .author {
  font-size: 28rpx;
 color:#999
}
.container {
  border-top: 20rpx solid #f1f1f1;
  padding: 0 30rpx;
  padding-top: 30rpx;
  width: 690rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .title {
  font-size: 30rpx;
  color: #2f2f2f;
  font-weight: 600;
  margin-bottom: 20rpx;
}

 .comments {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.comments v-tag{
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
.comments .count {
  font-size: 20rpx;
  color: #666;
  margin-left: 15rpx;}
.comments > v-tag:nth-child(1) view{
  background: #eefbff;
}

.comments > v-tag:nth-child(2) view {
  background:#fffbdd;
}


.content {
  display: inline-block;
  margin-top: 10rpx;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  text-indent:2em
}


.description .plain {
  display: inline-block;
  width: 80rpx;
  text-align: end;
}
.description .message{
  margin-left: 20rpx;
  color: #333333;
}
.decription-container .bottom-bgk{
  height: 90rpx;
  width: 100%;
  background: white;
}
.tab-bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
}
.write-comment{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 56rpx;
  width: 410rpx;
  margin-left: 30rpx;
  margin-right: 150rpx;
  border:1rpx solid #333333;
  border-radius: 28rpx;
}
.write-comment image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 30rpx;
}
.write-comment input{
  height: 56rpx;
}
.placeholder{
  font-size: 24rpx;
  line-height:24rpx;
  color: #333333;
  margin-left: 10rpx;
}
.button{
  margin-right: 30rpx;
}
.button > image{
  height: 30rpx;
  width: 30rpx;
}