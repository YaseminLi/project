.head-img {
  width: 100%;
  height: 320rpx;
  filter: blur(10px);
}

.head-img-hover {
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 320rpx;
  top: 0;
  left: 0;
}

.main-title {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.sub-title {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.like {
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}
.small-image{
 position: absolute;
  top: 150rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
}
.small-image .collect{
  display: flex;
  align-items: center;
  width:175rpx;
  justify-content: center;
  padding: 20rpx 0;
}
.small-image .collect image{
  margin-left: 20rpx;
  height: 35rpx;
  width: 35rpx;
}

.movie-img {
  height: 238rpx;
  width: 175rpx;
 
}

.summary {
  padding: 40rpx 0 40rpx 40rpx;
  border-bottom: 1px solid rgb(219, 218, 218);
}


.original-title {
  margin-bottom: 40rpx;
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999;
}
.synopsis {
  padding: 40rpx 0 40rpx 40rpx;
  border-bottom: 1px solid  rgb(219, 218, 218);
  display: flex;
  flex-direction: column;
}

.synopsis-font {
  color: #999;
}

.synopsis-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
  text-indent: 2em;
}

.cast {
  padding: 30rpx;
  border-bottom: 1px solid #999;
  display: flex;
  flex-direction: column;
}

.cast-font {
  color: #999;
  margin-bottom: 40rpx;
}

.cast-imgs{
  /* white-space: nowrap; */
  display: flex;
  flex-direction: row;
}

.cast-container {
  display: inline-flex;
  flex-direction: column;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  width: 170rpx;
  text-align: center;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
}

.cast-name {
  margin: 10rpx auto 0;
}

.post-container{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 90rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f1f1f1;
}
.post-fake{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 56rpx;
  width: 410rpx;
  margin-left: 30rpx;
  margin-right: 150rpx;
  border:1rpx solid #333333;
  border-radius: 28rpx;
}
.post-fake image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 30rpx;
}

.input{
  font-size: 24rpx;
  line-height:24rpx;
  color: #333333;
  margin-left: 10rpx;
}
.button{
  width: 160rpx;
  margin-right: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.button > image{
  height: 30rpx;
  width: 30rpx;
}
.posting-container{
  position: fixed;
  bottom: 0;
  width:100%;
  background: white;
  z-index: 100;
}
.posting-container .post-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-top:1rpx solid #f1f1f1;
  border-bottom:1rpx solid #f1f1f1;
}
.posting-container .post-header text{
  font-size: 34rpx;
  margin: 0 30rpx;
  color: #333333;
}
.posting-container .post-header text:first-child{
  color: #666
}
.posting-container .comment-container{
  width: 100%;
  margin: 40rpx 30rpx  0 30rpx;
  display: flex;
}
.posting-container .comment-container v-tag{
  margin-right: 20rpx;
}
.posting-container .count {
  font-size: 20rpx;
  color: #666;
  margin-left: 15rpx;}
.post{
  height: 66rpx;
  width: 630rpx;
  background: #f1f1f1;
  border-radius: 33rpx;
  margin: 30rpx;
  padding: 0 30rpx;
}
.placeholder{
font-size:28rpx;
}
