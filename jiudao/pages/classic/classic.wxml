<view class='class-container'>
  <view class='header'>
    <v-epsiode index="{{classic.index}}" pubdate="{{classic.pubdate}}" class="epsiode" />

    <v-like isLike="{{classic.like_status}}" count="{{classic.fav_nums}}" bind:like="onLike" class="like" />
  </view>

  <!-- <image class="share" src='/images/icon/fenxiang.png' /> -->

  <v-classic wx:if="{{classic.type==100}}"content="{{classic.content}}" image="{{classic.image}}" />
  <v-music wx:if="{{classic.type==200}}"content="{{classic.content}}" />
  <v-essay wx:if="{{classic.type==300}}"content="{{classic.content}}" />
  <v-navi title="{{classic.title}}" first="{{first}}" latest="{{latest}}" class='navi' bind:left="onNext" bind:right="onPrevious" />
</view>